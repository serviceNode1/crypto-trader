# Application Configuration
NODE_ENV=development
PORT=3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Google OAuth (Get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Database Configuration
DATABASE_URL=postgresql://crypto_user:crypto_pass@localhost:5432/crypto_ai
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=                        # Optional, leave empty if no password

# API Keys - Free Tiers
COINGECKO_API_KEY=                    # Optional for free tier
ALPHA_VANTAGE_API_KEY=your_key_here   # Get from https://www.alphavantage.co/support/#api-key
REDDIT_CLIENT_ID=your_client_id       # Get from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_SECRET=your_secret      
REDDIT_USER_AGENT=crypto-trader:v1.0.0:by /u/your_username
CRYPTOPANIC_API_KEY=your_key_here     # Get from https://cryptopanic.com/developers/api/
ETHERSCAN_API_KEY=your_key_here       # Get from https://etherscan.io/apis

# AI APIs - Paid (but cheap)
OPENAI_API_KEY=your_key_here          # GPT-4o-mini - Get from https://platform.openai.com/api-keys
ANTHROPIC_API_KEY=your_key_here       # Claude Haiku - Get from https://console.anthropic.com/

# Trading Configuration
STARTING_CAPITAL=10000
MAX_POSITION_SIZE=0.05                # 5% maximum per position
MAX_DAILY_LOSS=0.03                   # 3% daily loss limit
MAX_OPEN_POSITIONS=5
TRANSACTION_FEE=0.001                 # 0.1%
MIN_SLIPPAGE=0.001                    # 0.1%
MAX_SLIPPAGE=0.003                    # 0.3%

# Risk Management
MAX_PORTFOLIO_RISK=0.15               # 15% maximum at risk
MIN_DAILY_VOLUME=1000000              # $1M minimum daily volume
MAX_POSITION_CORRELATION=0.7          # Maximum correlation between positions
MIN_TRADE_INTERVAL_HOURS=1            # Minimum hours between trades

# Caching Configuration (seconds)
CACHE_TTL_PRICE=60
CACHE_TTL_MARKETCAP=300
CACHE_TTL_SENTIMENT=900
CACHE_TTL_NEWS=1800
CACHE_TTL_TRADITIONAL=3600
CACHE_TTL_HISTORICAL=86400

# Job Scheduling
ENABLE_JOB_SCHEDULER=true              # Set to 'false' to disable automated jobs

# Job Scheduling (cron format)
CRON_COLLECT_PRICES=*/5 * * * *        # Every 5 minutes
CRON_COLLECT_NEWS=*/15 * * * *         # Every 15 minutes
CRON_COLLECT_SENTIMENT=*/30 * * * *    # Every 30 minutes
CRON_MARKET_CONTEXT=0 * * * *          # Every hour
CRON_ANALYSIS=15 * * * *               # Every hour at :15
CRON_RECOMMENDATIONS=0 */4 * * *       # Every 4 hours
CRON_DAILY_REPORT=0 9 * * *            # Daily at 9 AM
CRON_WEEKLY_REPORT=0 9 * * 1           # Monday at 9 AM

# Logging
LOG_LEVEL=info                         # debug, info, warn, error
LOG_FILE_PATH=./logs/app.log
